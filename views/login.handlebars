<div id="login-page">
	<div class="form-content">
		<h1>Log In</h1>
		{{#if errors}}
					<div id='danger'>{{errors}}</div>
		{{/if}}
		<form action="/auth/login" method="post" id="login_form">
			<div class="input-group">
				<label>Email</label>
				<input 
					name="user_email" 
					id="userEmail" 
					type="email" 
					{{#if email}} value={{email}} {{/if}} 
					required
					autofocus
				/>
			</div>
			<div class="input-group">
				<label>Password</label>
				<input 
					name="user_password" 
					id="userPassword" 
					type="password" 
					{{#if password}} value={{password}} {{/if}} 
					required
				/>
			</div>
			<div class="input-group">
				<input class="button button-block" type="submit" value="Log In" />
			</div>
		</form>
	<div class="login-section text-center">
        <h5>Forgot your password? <a href="/forgot">Reset</a></h5>
				<p class="go-back-link"><a href="/">Go Back</a></p>
    </div>
	</div>
</div>