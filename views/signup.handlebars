<div>
	<h1>Join Today</h1>
	<h5>Enter your name, email, and password to get started today</h5>
	{{#if errors}}
         <div id='danger'>{{errors}}</div>
	{{/if}}
	<form action="/add-new-user" method="post" id="sign_up_form">
		<label>Name*</label>
		<input name="full_name" placeholder="Enter Your Name" id="userName" type="text" required/>
		<label>Email*</label>
		<input name="user_email" placeholder="Enter Your Email" id="userEmail" type="email" required/>
		<label>Password*</label>
		<input name="user_password" placeholder="Enter A Password" id="userPassword" type="password" required/>
		<input class="button button-block" type="submit" value="Sign Up" />
	</form>

	<h5>Already have an account?</h5>
	<input class="button button-block" type="button" value="Log In" />
</div>
